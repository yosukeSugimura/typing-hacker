# タイピングウェブサイトのベーURL
BASE_URL=https://www.e-typing.ne.jp

# APIエンドポイント（将来の機能のため）
API_ENDPOINT=

# ブラウザ設定
HEADLESS=false          # true: ヘッドレスモードで実行
DEBUG=false             # true: デバッグモードを有効化

# タイピング自動化設定
TYPING_SPEED=50         # タイピング速度（WPM: Words Per Minute）
TYPO_PROBABILITY=0.01   # タイポ発生確率（0.01 = 1%）
AUTO_RETRY=true         # 失敗時の自動リトライ
MAX_RETRIES=3           # 最大リトライ回数

# スクリーンショットと動画設定
TAKE_SCREENSHOTS=true   # スクリーンショットを撮影
RECORD_VIDEO=false      # テスト動画を録画
KEEP_VIDEOS_ON_PASS=false # 成功時も動画を保持

# テストタイムアウト（ミリ秒）
WAIT_TIMEOUT=15000      # 要素待機タイムアウト
ACTION_TIMEOUT=1000     # アクションタイムアウト

# 並列実行設定
PARALLEL_TESTS=2        # 並列で実行するテスト数