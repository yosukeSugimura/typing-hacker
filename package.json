{
  "name": "typing-hacker",
  "version": "2.0.0",
  "description": "An advanced typing automation tool for e-typing.ne.jp with smart features",
  "private": true,
  "keywords": [
    "typing",
    "automation",
    "codeceptjs",
    "playwright",
    "testing",
    "e-typing"
  ],
  "author": "yosukeSugimura",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "setup": "npm install && npx playwright install chromium && npm run build",
    "build": "npx codeceptjs def && tsc --noEmit",
    "dev": "npm run test:debug",
    "start": "npm run test",
    "test": "codeceptjs run --steps",
    "test:headless": "HEADLESS=true codeceptjs run --steps",
    "test:debug": "DEBUG=true codeceptjs run --steps --verbose",
    "test:parallel": "codeceptjs run-multiple parallel",
    "test:smoke": "codeceptjs run-multiple smoke",
    "test:retry": "codeceptjs run --steps --retry 3",
    "ui": "codecept-ui --app",
    "ui:demo": "codecept-ui --app -c node_modules/@codeceptjs/examples",
    "demo": "codeceptjs run --steps -c node_modules/@codeceptjs/examples",
    "demo:headless": "HEADLESS=true codeceptjs run --steps -c node_modules/@codeceptjs/examples",
    "generate:test": "codeceptjs generate:test",
    "generate:page": "codeceptjs generate:pageobject",
    "generate:helper": "codeceptjs generate:helper",
    "report": "allure serve ./reports/allure-results",
    "report:open": "allure open ./reports/allure-results",
    "report:generate": "allure generate ./reports/allure-results --clean",
    "clean": "rimraf output reports coverage .nyc_output",
    "clean:install": "npm run clean && rimraf node_modules package-lock.json && npm install",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write '**/*.{ts,js,json,md}'",
    "format:check": "prettier --check '**/*.{ts,js,json,md}'",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "precommit": "npm run validate",
    "prepush": "npm run test:headless"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@codeceptjs/allure-legacy": "^1.0.2",
    "@codeceptjs/configure": "^0.10.0",
    "@codeceptjs/examples": "^1.2.1",
    "@codeceptjs/ui": "^0.6.1",
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "allure-commandline": "^2.24.1",
    "codeceptjs": "3.5.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-codeceptjs": "^1.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "playwright": "^1.35.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:headless"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yosukeSugimura/typing-hacker.git"
  },
  "bugs": {
    "url": "https://github.com/yosukeSugimura/typing-hacker/issues"
  }
}
